@using Project2_Dovantrung_2110900043.Models;

@model List<UserModel> 
<style>


    .form-update {
        width: 100%;
        height: 100vh;
        position: fixed;
        /* background-color: rgba(128, 128, 128, 0.46); */
        top: 0;
        left: 0;
        z-index: 9999;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        

    .form-update h1 {
        margin: 0;
        background: black;
        width: 100%;
    }

    .form-update .overlay {
        width: 100%;
        height: 100%;
        background-color: rgba(128, 128, 128, 0.76);
        position: absolute;
        top: 0;
        left: 0;
        z-index: 1;
    }

    .form-update form {
        position: fixed;
        width: 50%;
        height: max-content;
        text-align: start;
        z-index: 999;
        border: 1px solid black;
        top: 30px;
        left: 400px;
        background-color: #e0d6d6;
        color: white;
    }

        .form-update form .form-input {
            display: flex;
            margin: 10px 20px 20px 10px;
        }

            .form-update form .form-input input {
                width: 60%;
                height: 30px;
                border-radius: 15px;
                border: 1px solid rgba(128, 128, 128, 0.786);
            }

                .form-update form .form-input input:focus {
                    outline: none;
                }

            .form-update form .form-input select {
                width: 20%;
            }

        .form-update form label {
            width: 20%;
            text-align: start;
        }

    .form-update button {
        width: 150px;
        height: 40px;
        transform:translateX(205%);
        border-radius: 10px;
        background-color: green ;
        border: none;
    }
</style>

@foreach(var u in Model)
{

    <div class='form-update'>
        <div class="overlay"></div>
        <form action="/Admin/Home/Edit" method="post">
            <h1>Update</h1>
            <div style="display:none;" class="form-input">
                <label for="id_user">id</label>
                <input type="text" name='id_user' value="@u.id_user" placeholder='id_user...' />
            </div>
            <div class="form-input">
                <label for="username">Name</label>
                <input type="text" name='username' value="@u.username" placeholder='UserName ...' />
            </div>
            <div class="form-input">
                <label for="passsword">Password</label>
                <input type="text" name='passsword' placeholder='Password...' />
            </div>
            <div class="form-input">
                <label for="email">Price</label>
                <input type="email" name='email' value="@u.email" placeholder='Email ...' />
            </div>
            <div class="form-input">
                <label for="is_admin">Is_admin</label>
                <input type="checkbox" value="true" name='is_admin' />
            </div>

            <button>Update</button>

        </form>
    </div>
}



