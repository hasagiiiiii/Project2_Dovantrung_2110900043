@using Project2_Dovantrung_2110900043.Models;
@{
    Layout = "_NoHeader";
}
@model List<UserModel>
<link href="~/css/admin.css" rel="stylesheet" />


<button id="add" type="button" style="transform:translateX(50px) translateY(50px)" class="btn btn-primary">Thêm người dùng</button>
<table style="margin:150px auto; border:1px solid black; width:70%;" class="table">
    <thead style="background:black; color:white" class="thead-dark">
        <tr>
            <th scope="col">id_user</th>
            <th scope="col">Username</th>
            <th scope="col">password</th>
            <th scope="col">Email</th>
            <th scope="col" >Update</th>
            <th scope="col" colspan="2" >Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var items in Model)
        {
            <tr>
                <th scope="row">@items.id_user</th>
                <td>@items.username</td>
                <td>@items.passsword</td>
                <td>@items.email</td>
                <td><a class="update" href="/Admin/Home/Update?id=@items.id_user">Update</a></td>
                <td><a class="delete" href="">Delete</a></td>
            </tr>
        }
       
       
    </tbody>
</table>

<div class='form'>
    <div class="overlay"></div>
    <form action="/Admin/Home/addUser" method="post">
    <h1>Task</h1>
        <div class="form-input">
            <label for="username">Name</label>
            <input type="text" name='username' placeholder='UserName ...' />
        </div>
        <div class="form-input">
            <label for="passsword">Password</label>
            <input type="text" name='passsword' placeholder='Password...' />
        </div>
        <div class="form-input">
            <label for="email">Price</label>
            <input type="email" name='email' placeholder='Email ...' />
        </div>
        <div class="form-input">
            <label for="bio">Price</label>
            <textarea name="bio" id="" cols="80" rows="15"></textarea>
        </div>
        <div class="form-input">
            <label for="is_admin">Is_admin</label>
            <input type="checkbox" value="true" name='is_admin'/>
        </div>

        <button >Add</button>

    </form>
</div>



<script src="~/js/admin.js"></script>